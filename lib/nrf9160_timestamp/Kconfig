config NRF9160_TIMESTAMP
	bool "nRF9160 timestamp module"
	select AT_CMD
	select SNTP

if NRF9160_TIMESTAMP

config NRF9160_TIMESTAMP_TIME_UPDATE_INTERVAL
	int "Time update interval"
	default 3600

config NRF9160_TIMESTAMP_TIME_FROM_MODEM
	bool "Get time from the nRF9160 onboard modem every update interval"
	default y if BOARD_NRF9160_PCA10090NS || BOARD_NRF9160_PCA20035NS

config NRF9160_TIMESTAMP_NTP_THREAD_SIZE
	int "Stack size of the thread maintaining time from NTP servers"
	default 2048

module=NRF9160_TIMESTAMP
module-dep=LOG
module-str=nRF9160 timestamp module
source "${ZEPHYR_BASE}/subsys/logging/Kconfig.template.log_config"

endif # NRF9160_TIMESTAMP
