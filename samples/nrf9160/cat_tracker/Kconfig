menu "Cat Tracker sample"

menu "GPS"

choice
	prompt "GPS device"
	default GPS_USE_SIM
	help
		Select from which device GPS data will be fetched.

config GPS_USE_SIM
	bool "Use GPS simulator"
	select GPS_SIM
	select GPS_SIM_TRIGGER
	help
		Use simulated GPS data.

config GPS_USE_EXTERNAL
	bool "User provided GPS device"
	help
		Provide a GPS device that location data will be fetched from and
		sent to nRF Cloud

rsource "src/gps_controller/Kconfig"

endchoice

config GPS_DEV_NAME
	string "GPS device name"
	default GPS_SIM_DEV_NAME if GPS_USE_SIM
	help
		GPS device from which location data will be fetched and sent
		to nRF Cloud.

config GPS_TRIGGER
	bool
	default GPS_SIM_TRIGGER if GPS_USE_SIM

endmenu	# GPS

config CLOUD_CERT_SEC_TAG
	int "Secure tag fo TLS credentials"
	default 1

config MQTT_PUB_TOPIC
	string "MQTT publish topic"
	default "my/publish/topic"

config MQTT_SUB_TOPIC
	string "MQTT subscribe topic"
	default "my/subscribe/topic"

config MQTT_AWS_GET_TOPIC
	string "MQTT AWS get topic"
	default "$aws/things/{thingname}/shadow/get"

config MQTT_AWS_GET_ACCEPTED_TOPIC
	string "MQTT AWS get topic"
	default "$aws/things/{thingname}/shadow/get/accepted/desired/cfg"

config MQTT_AWS_GET_REJECTED_TOPIC
	string "MQTT AWS get topic"
	default "$aws/things/{thingname}/shadow/get/rejected"

config MQTT_AWS_UPDATE_TOPIC
	string "MQTT AWS get topic"
	default "$aws/things/{thingname}/shadow/update"

config MQTT_AWS_UPDATE_DELTA_TOPIC
	string "MQTT AWS get topic"
	default "$aws/things/{thingname}/shadow/update/delta"

config MQTT_AWS_CLIENT_ID
	string "MQTT AWS Client ID"
	default "Cat-Tracker"

config MQTT_AWS_BROKER_HOSTNAME
	string "MQTT AWS broker hostname"
	default "a2zs8l7txlw7wc-ats.iot.us-west-2.amazonaws.com"

config MQTT_CLIENT_ID
	string "MQTT Client ID"
	default "my-client-id"

config MQTT_BROKER_HOSTNAME
	string "MQTT broker hostname"
	default "iot.eclipse.org"

config MQTT_BROKER_PORT
	int "MQTT broker port"
	default 1883

config MQTT_AWS_BROKER_PORT
	int "MQTT AWS broker port"
	default 8883	

config MQTT_MESSAGE_BUFFER_SIZE
	int ""
	default 2048

config MQTT_PAYLOAD_BUFFER_SIZE
	int ""
	default 2048

endmenu

menu "Zephyr Kernel"
source "$ZEPHYR_BASE/Kconfig.zephyr"
endmenu